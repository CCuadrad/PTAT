<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatusActivity"
    tools:ignore="MergeRootFrame">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/frgTapBar"
            android:name="com.imdea.fioravantti.guido.ecousin_ptat.fragments.TapBar"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            />

        <fragment
            android:id="@+id/frgStatus"
            android:name="com.imdea.fioravantti.guido.ecousin_ptat.activities.StatusActivity$StatusFragment"
            android:layout_height="fill_parent"
            android:layout_width="match_parent"
            />

    </LinearLayout>


</FrameLayout>
    