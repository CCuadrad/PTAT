<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.imdea.fioravantti.guido.ecousin_ptat.activities.AboutActivity$PlaceholderFragment"
    android:background="@android:color/background_light">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/icon"
        />

    <TextView
        android:id="@+id/aboutTitle"
        android:layout_below="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="27dp"
        android:gravity="center"
        android:text="Passive Traffic Analysis Tool"/>

    <TextView
        android:id="@+id/aboutText"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_below="@id/aboutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contact_info"
        />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_below="@id/aboutText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="29th of December, 2014 â€“ Madrid, Spain"
        android:gravity="center"
        />


</RelativeLayout>
